{{!
    @template mod_stream/search

    view a stream search html field

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name": "test",
                "status": "Finished",
        "cmid": 3,
        "courseid": 3
    }
}}
<div>
    <div class="row">
        <div class="col p-3">
            <a href="#" class="btn btn-primary btn-upload">{{#str}}upload, mod_stream{{/str}}</a>
        </div>
    </div>
</div>

<iframe src="{{endpoint}}/videos/miniupload?moodle=1&token={{token}}&email={{email}}" id="upload_stream"></iframe>
<div id="stream-load">
    <div class="row" id="stream-sort">
        <div class="col">
            <button class="btn btn-outline-secondary active" data-name="timecreated">{{#str}}sortbytimecreated, mod_stream{{/str}}</button>
            <button class="btn btn-outline-secondary" data-name="title">{{#str}}sortbyname, mod_stream{{/str}}</button>
            <button class="btn btn-outline-secondary" data-name="views">{{#str}}sortbyview, mod_stream{{/str}}</button>
            <button class="btn btn-outline-secondary" data-name="filesize">{{#str}}sortbysize, mod_stream{{/str}}</button>
        </div>
    </div>
    <div class="row" id="stream-search">
        <div class="col">
            <input type="text" class="form-control" id="stream-title-search" placeholder="{{#str}}search, mod_stream{{/str}}">
        </div>
    </div>
    <div class="row row-cols-1 row-cols-lg-5 justify-content-center" id="stream-elements">
        {{#pix}}i/loading, core{{/pix}}
    </div>
    <div id="stream-pagination"></div>
</div>